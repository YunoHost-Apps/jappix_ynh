{
    "name": "Jappix",
    "id": "jappix",
    "packaging_format": 1,
    "description": {
        "en": "A free social network",
        "fr": "Un réseau social libre"
    },
    "version": "1.2~ynh2",
    "url": "https://jappix.org/",
    "upstream": {
        "license": "AGPL-3.0-only",
        "website": "https://jappix.org/",
        "code": "https://github.com/jappix/jappix/"
    },
    "license": "AGPL-3.0-only",
    "maintainer": {
        "name": "titoko",
        "email": "titoko@titoko.fr"
    },
    "requirements": {
        "yunohost": ">> 11.2"
    },
    "multi_instance": false,
    "services": [
        "nginx",
        "metronome"
    ],
    "arguments": {
        "install" : [
        {
            "name": "domain",
            "type": "domain"
        },
        {
            "name": "path",
            "type": "path",
            "example": "/jappix",
            "default": "/jappix"
        },
        {
            "name": "name",
            "type": "string",
            "ask": {
                "en": "Choose a name for Jappix",
                "fr": "Choisissez un nom pour Jappix"
        },
            "example": "YunoJappix",
            "default": "YunoJappix"
        },
        {
            "name": "language",
            "type": "select",
            "ask": {
                "en": "Choose the default language of Jappix",
                "fr": "Choissisez la langue par défaut de Jappix"
        },
            "choices" : ["en", "fr", "es"],
            "default" : "en"
        }
    ]
  }
}
